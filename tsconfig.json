{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "moduleResolution": "Bundler",
    "outDir": "jsxbundle", // Output directory for the compiled files
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [ "node_modules", "vendor" ],
  "include": [
    "src/Views/react/*.ts",
    "src/Views/react/*.tsx",
  ]
}